<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- VUE FORMULAIRE ÉTIQUETTE -->
    <!-- ============================================================ -->
    <record id="view_mail_etiquette_form" model="ir.ui.view">
        <field name="name">mail.etiquette.form</field>
        <field name="model">mail.etiquette</field>
        <field name="arch" type="xml">
            <form string="Étiquette">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_courriels"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-envelope">
                            <field name="courriel_count" widget="statinfo" string="Courriels"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nom de l'étiquette"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" widget="color_picker"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- VUE LISTE ÉTIQUETTE -->
    <!-- ============================================================ -->
    <record id="view_mail_etiquette_tree" model="ir.ui.view">
        <field name="name">mail.etiquette.tree</field>
        <field name="model">mail.etiquette</field>
        <field name="arch" type="xml">
            <tree string="Étiquettes">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="courriel_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- VUE KANBAN ÉTIQUETTE -->
    <!-- ============================================================ -->
    <record id="view_mail_etiquette_kanban" model="ir.ui.view">
        <field name="name">mail.etiquette.kanban</field>
        <field name="model">mail.etiquette</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="color"/>
                <field name="courriel_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{record.color.raw_value} oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><field name="courriel_count"/> courriels</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- ACTION ÉTIQUETTE -->
    <!-- ============================================================ -->
    <record id="action_mail_etiquette" model="ir.actions.act_window">
        <field name="name">Étiquettes</field>
        <field name="res_model">mail.etiquette</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez une nouvelle étiquette
            </p>
            <p>
                Les étiquettes permettent de catégoriser vos courriels.
            </p>
        </field>
    </record>

</odoo>
