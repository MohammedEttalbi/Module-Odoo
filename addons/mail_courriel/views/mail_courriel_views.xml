<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ============================================================ -->
    <!-- ACTIONS (defined first to be available for views) -->
    <!-- ============================================================ -->
    
    <!-- Action principale - Tous les courriels -->
    <record id="action_mail_courriel" model="ir.actions.act_window">
        <field name="name">Tous les courriels</field>
        <field name="res_model">mail.courriel</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©ez votre premier courriel !
            </p>
            <p>
                G√©rez vos courriels entrants et sortants depuis cette interface.
            </p>
        </field>
    </record>

    <!-- Action - Bo√Æte de r√©ception -->
    <record id="action_mail_courriel_inbox" model="ir.actions.act_window">
        <field name="name">Bo√Æte de r√©ception</field>
        <field name="res_model">mail.courriel</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('dossier_id.code', '=', 'inbox')]</field>
        <field name="context">{'default_is_entrant': True}</field>
    </record>

    <!-- Action - Envoy√©s -->
    <record id="action_mail_courriel_sent" model="ir.actions.act_window">
        <field name="name">Envoy√©s</field>
        <field name="res_model">mail.courriel</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('dossier_id.code', '=', 'sent')]</field>
    </record>

    <!-- Action - Brouillons -->
    <record id="action_mail_courriel_draft" model="ir.actions.act_window">
        <field name="name">Brouillons</field>
        <field name="res_model">mail.courriel</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('dossier_id.code', '=', 'draft')]</field>
        <field name="context">{'default_statut': 'brouillon'}</field>
    </record>

    <!-- Action - Archives -->
    <record id="action_mail_courriel_archive" model="ir.actions.act_window">
        <field name="name">Archives</field>
        <field name="res_model">mail.courriel</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('dossier_id.code', '=', 'archive')]</field>
    </record>

    <!-- Action - Spam -->
    <record id="action_mail_courriel_spam" model="ir.actions.act_window">
        <field name="name">Spam</field>
        <field name="res_model">mail.courriel</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('dossier_id.code', '=', 'spam')]</field>
    </record>

    <!-- Action - Nouveau courriel -->
    <record id="action_mail_courriel_new" model="ir.actions.act_window">
        <field name="name">Nouveau courriel</field>
        <field name="res_model">mail.courriel</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{'default_statut': 'brouillon'}</field>
    </record>

    <!-- ============================================================ -->
    <!-- VUE FORMULAIRE COURRIEL -->
    <!-- ============================================================ -->
    <record id="view_mail_courriel_form" model="ir.ui.view">
        <field name="name">mail.courriel.form</field>
        <field name="model">mail.courriel</field>
        <field name="arch" type="xml">
            <form string="Courriel">
                <header>
                    <button name="action_envoyer" 
                            string="Envoyer" 
                            type="object" 
                            class="btn-primary"
                            invisible="statut not in ['brouillon', 'echec']"
                            icon="fa-paper-plane"/>
                    <button name="action_marquer_lu" 
                            string="Marquer comme lu" 
                            type="object"
                            invisible="statut in ['brouillon', 'lu', 'archive']"
                            icon="fa-check"/>
                    <button name="action_marquer_non_lu" 
                            string="Marquer comme non lu" 
                            type="object"
                            invisible="statut != 'lu'"
                            icon="fa-circle-o"/>
                    <button name="action_archiver" 
                            string="Archiver" 
                            type="object"
                            invisible="statut == 'archive'"
                            icon="fa-archive"/>
                    <button name="action_spam" 
                            string="Spam" 
                            type="object"
                            icon="fa-ban"/>
                    <button name="action_restaurer" 
                            string="Restaurer" 
                            type="object"
                            invisible="statut not in ['archive']"
                            icon="fa-undo"/>
                    <field name="statut" widget="statusbar" 
                           statusbar_visible="brouillon,a_envoyer,envoye,lu"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Objet du courriel"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="expediteur_id"/>
                            <field name="destinataire_ids" widget="many2many_tags"/>
                            <field name="cc_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="dossier_id"/>
                            <field name="priorite"/>
                            <field name="etiquette_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="date_envoi" readonly="1"/>
                            <field name="date_reception" readonly="1" invisible="not is_entrant"/>
                        </group>
                        <group>
                            <field name="is_entrant" invisible="1"/>
                            <field name="attachment_count" string="Pi√®ces jointes"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Contenu" name="contenu">
                            <field name="contenu" placeholder="R√©digez votre message ici..."/>
                        </page>
                        <page string="Pi√®ces jointes" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Informations techniques" name="technical" groups="base.group_no_one">
                            <group>
                                <field name="mail_mail_id" readonly="1"/>
                                <field name="error_message" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- VUE LISTE COURRIEL -->
    <!-- ============================================================ -->
    <record id="view_mail_courriel_tree" model="ir.ui.view">
        <field name="name">mail.courriel.tree</field>
        <field name="model">mail.courriel</field>
        <field name="arch" type="xml">
            <tree string="Courriels" decoration-bf="statut not in ['lu', 'archive']" decoration-muted="statut == 'archive'">
                <field name="date_envoi"/>
                <field name="name"/>
                <field name="expediteur_id"/>
                <field name="destinataire_ids" widget="many2many_tags"/>
                <field name="dossier_id"/>
                <field name="priorite"/>
                <field name="etiquette_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="statut" widget="badge" decoration-success="statut == 'envoye'" decoration-info="statut == 'lu'" decoration-warning="statut == 'brouillon'" decoration-danger="statut == 'echec'"/>
                <field name="attachment_count" string="üìé"/>
            </tree>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- VUE KANBAN COURRIEL -->
    <!-- ============================================================ -->
    <record id="view_mail_courriel_kanban" model="ir.ui.view">
        <field name="name">mail.courriel.kanban</field>
        <field name="model">mail.courriel</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="dossier_id">
                <field name="name"/>
                <field name="expediteur_id"/>
                <field name="statut"/>
                <field name="priorite"/>
                <field name="date_envoi"/>
                <field name="etiquette_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top mb-0">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="float-end">
                                        <field name="priorite" widget="priority"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <span class="text-muted">De: </span>
                                        <field name="expediteur_id"/>
                                    </div>
                                    <div class="text-muted">
                                        <field name="date_envoi" widget="date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="etiquette_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="statut" widget="label_selection" options="{'classes': {'brouillon': 'warning', 'envoye': 'success', 'lu': 'info', 'archive': 'secondary', 'echec': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- ============================================================ -->
    <!-- VUE RECHERCHE COURRIEL -->
    <!-- ============================================================ -->
    <record id="view_mail_courriel_search" model="ir.ui.view">
        <field name="name">mail.courriel.search</field>
        <field name="model">mail.courriel</field>
        <field name="arch" type="xml">
            <search string="Rechercher des courriels">
                <field name="name"/>
                <field name="expediteur_id"/>
                <field name="destinataire_ids"/>
                <field name="contenu"/>
                <separator/>
                <filter name="filter_brouillon" string="Brouillons" domain="[('statut', '=', 'brouillon')]"/>
                <filter name="filter_envoye" string="Envoy√©s" domain="[('statut', '=', 'envoye')]"/>
                <filter name="filter_lu" string="Lus" domain="[('statut', '=', 'lu')]"/>
                <filter name="filter_non_lu" string="Non lus" domain="[('statut', 'not in', ['lu', 'archive'])]"/>
                <filter name="filter_archive" string="Archiv√©s" domain="[('statut', '=', 'archive')]"/>
                <separator/>
                <filter name="filter_urgent" string="Urgents" domain="[('priorite', '=', '3')]"/>
                <filter name="filter_entrant" string="Entrants" domain="[('is_entrant', '=', True)]"/>
                <filter name="filter_sortant" string="Sortants" domain="[('is_entrant', '=', False)]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter name="group_dossier" string="Dossier" context="{'group_by': 'dossier_id'}"/>
                    <filter name="group_statut" string="Statut" context="{'group_by': 'statut'}"/>
                    <filter name="group_priorite" string="Priorit√©" context="{'group_by': 'priorite'}"/>
                    <filter name="group_expediteur" string="Exp√©diteur" context="{'group_by': 'expediteur_id'}"/>
                    <filter name="group_date" string="Date d'envoi" context="{'group_by': 'date_envoi:month'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
